    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "pnpm run watch",
            "request": "launch",
            "runtimeArgs": [
                "watch"
            ],
            "runtimeExecutable": "pnpm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "autoAttachChildProcesses": true,
            "restart": true,
            "smartStep": true,
            "sourceMaps": true
        },
        {
            "name": "pnpm run start",
            "request": "launch",
            "runtimeArgs": [
                "start"
            ],
            "runtimeExecutable": "pnpm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "autoAttachChildProcesses": true,
            "restart": true,
            "smartStep": true,
            "sourceMaps": true
        }
    ]
}